<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/fundo"
    android:padding="24dp"
    android:gravity="center_horizontal">
    <ImageView
        android:id="@+id/imgFoto"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_launcher_foreground"
        android:scaleType="centerCrop"
        android:layout_marginBottom="24dp" />
    <TextView
        android:id="@+id/tvNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome da Loja"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/cor_titulo"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvCategoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="categoria da loja"
        android:textColor="@color/cor_titulo"
        android:textSize="16sp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/tvTelefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(00) 00000-0000"
        android:textColor="@color/cor_titulo"
        android:textSize="16sp"
        android:layout_marginBottom="4dp" />

    <Button
        android:id="@+id/btnLigar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ligar"
        android:backgroundTint="@color/cor_sel"
        android:textColor="#000"
        android:textStyle="bold"
        android:elevation="4dp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnVoltar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/voltar"
        android:backgroundTint="@color/cor_div"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:elevation="2dp" />
</LinearLayout>